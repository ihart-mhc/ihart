package  {	import flash.display.Stage;	import flash.display.MovieClip;	import flash.utils.Timer;	import ihart.event.*;	import flash.events.*;	public class HitBox extends MovieClip {				var screen:EnemyScreen;				private var cvManager:CVManager;				// timer. needed for animation timing.		var timer:Timer;				var cantBeKnocked:Boolean = false;				public function HitBox(enemyScreen:EnemyScreen, cv:CVManager)		{			stop();			screen = enemyScreen;			cvManager = cv;						// iHart - comment out for mouse clicks.			cvManager.addEventListener(CVEvent.SHELL, eventHandler);			// Mouse clicks - comment out for iHart			// addEventListener(MouseEvent.CLICK, eventHandler);		}				// private function eventHandler(e: MouseEvent):void {		private function eventHandler(e: CVEvent):void {			if (!cantBeKnocked) {				this.gotoAndPlay(1);				timer = new Timer(1000, 1);				timer.addEventListener(TimerEvent.TIMER_COMPLETE, stopAnimating);				timer.start();							screen.collide(this);				cantBeKnocked = true;			}		}				private function stopAnimating(e : TimerEvent):void {			// stop.			this.gotoAndStop(1);			cantBeKnocked = false;		}	}	}