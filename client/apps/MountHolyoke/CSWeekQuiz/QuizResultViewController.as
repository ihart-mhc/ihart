package {	import flash.events.MouseEvent;	import ihart.event.*;	import flash.display.MovieClip;	import flash.display.DisplayObjectContainer;	import flash.text.TextField;		public class QuizResultViewController extends MovieClip {				//create a cvManager		var cv_man : CVManager;				//The QuizController object, which takes care of data retrevial for us.		var quizController:QuizController = new QuizController();		var returnButton : Button;				public function QuizResultViewController(quizCont:QuizController, cvman:CVManager) {			quizController = quizCont;			cv_man = cvman;		}				public function updateScreen(fact:String, correct:Boolean):void {			//Did the user guess correctly?			if (correct == true){				//display correct.				correctText.text = "Correct!";			}			else {				//display wrong				correctText.text = "Incorrect.";			}						//Now, update our fun fact			descriptionText.text = fact;						//And finally re-draw the button...			returnButton = new Button();			var doc:DisplayObjectContainer = returnButton.upState as DisplayObjectContainer;			var tf:TextField = doc.getChildAt(1) as TextField;			tf.text = "Next Question...";			tf.autoSize = "center";						doc = returnButton.downState as DisplayObjectContainer;			tf = doc.getChildAt(1) as TextField;			tf.text = "Next Question...";			tf.textColor = 0xAAAAAA;			tf.autoSize = "center";						doc = returnButton.overState as DisplayObjectContainer;			tf = doc.getChildAt(1) as TextField;			tf.text = "Next Question...";			tf.textColor = 0xAAAAAA;			tf.autoSize = "center";						returnButton.x = -100;			returnButton.y = 200;			returnButton.setCVManager(cv_man);			returnButton.enable(CVEvent.SHELL);			returnButton.addEventListener(MouseEvent.CLICK, returnButtonClicked);			addChild(returnButton);		}				public function remove():void {			//Removes the button from the screen.			removeEventListener(MouseEvent.CLICK, returnButtonClicked);						removeChild(returnButton);		}				public function returnButtonClicked(e:MouseEvent):void {			quizController.nextButtonClicked();		}	}}