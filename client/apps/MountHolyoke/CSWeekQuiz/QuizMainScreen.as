package {	import flash.display.*;	import flash.text.TextField;	import ihart.event.*;	import flash.events.*;		public class QuizMainScreen extends MovieClip {			//create a cvManager		var cv_man : CVManager;				//QuizController		var quizController:QuizController;				//Button		var button:Button = new Button();				//Constructor, does nothing		public function QuizMainScreen(quizCont:QuizController){			this.quizController = quizCont;		}				public function initialize(cvman:CVManager){			//Initializes button on screen.			cv_man = cvman;						//Sets up button			var doc:DisplayObjectContainer = button.upState as DisplayObjectContainer;			var tf:TextField = doc.getChildAt(1) as TextField;			tf.text = "Place hand here to begin!";			tf.autoSize = "center";						doc = button.downState as DisplayObjectContainer;			tf = doc.getChildAt(1) as TextField;			tf.text = "Place hand here to begin!";			tf.textColor = 0xAAAAAA;			tf.autoSize = "center";						doc = button.overState as DisplayObjectContainer;			tf = doc.getChildAt(1) as TextField;			tf.text = "Place hand here to begin!";			tf.textColor = 0xAAAAAA;			tf.autoSize = "center";						//Set x/y coordinates			button.x = -126.00;			button.y = -64.00;			button.setCVManager(cv_man);			button.enable(CVEvent.SHELL);						button.addEventListener(MouseEvent.CLICK, buttonClicked);			addChild(button);		}				//the button clicked function		function buttonClicked(e : MouseEvent) : void {			quizController.initializeEverythingElse();		}	}}