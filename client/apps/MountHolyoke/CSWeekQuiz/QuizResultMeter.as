package {	import flash.display.*;		public class QuizResultMeter extends MovieClip {				var indicator:Shape;				public function QuizResultMeter(percentile:Number) {			//Given the passed percent, we place our shape...			indicator = new Shape();			indicator.graphics.beginFill(0xffffff);			var xcord:Number = 535 * (1 - percentile);			indicator.graphics.drawRect(xcord - 262,-46, 26, 91);			addChild(indicator);		}				public function removeIndicator():void {			removeChild(indicator);		}	}}//0 = -262//100 = 248//width: 535// (535 * percentile) + (-262)