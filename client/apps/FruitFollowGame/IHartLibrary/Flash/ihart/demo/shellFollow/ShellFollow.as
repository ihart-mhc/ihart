package ihart.demo.shellFollow{	import flash.display.MovieClip;    import flash.display.Sprite;    import flash.events.*;    import flash.net.XMLSocket;	import ihart.event.*;		/**	* BallDrag	* @author Audrey St.John adapted by Cleo Schneider	* 01/19/09	* BallDrag receives data and moves a single movie clip 	* around according to the data	**/    public class ShellFollow extends Sprite {		/**		* Fields		**/        private var hostName:String = "localhost"; //host name for socket        private var port:uint = 5204; //port number		private var m : MovieClip; //movie clip to move around				//create a cvManager to dispatch a whole blob event		private var cvManager : CVManager;		/**		* Constructor		* Create a simple program where the movie clip gets coordinates from		* the event listener and updates them accordingly		**/        public function ShellFollow( m : MovieClip ) {			this.m = m;			cvManager = new CVManager(hostName, port);			//we must add an event listener to the cv manager in order to know when			//we have received data			cvManager.addEventListener(CVEvent.SHELL, getData);        }				/**		* CVEvent Listener getData get's the x and y coordinates from the		* CVEvent		**/		private function getData(e : CVEvent) : void{			trace("x: " + e.getX(0) + ", y: " + e.getY(0)); 			if(e.getX(0) > -1 && e.getY(0)>-1){				m.x = e.getX(0);				m.y = e.getY(0);			}		}    }}