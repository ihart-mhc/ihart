package ihart.event{	import flash.events.*;		/**	* CVEventData	* @author Felicia Cordeiro 11/23/2010	* @author Cleo Schneider	* CVEventData holds all data necessary for a blob event	**/	public class CVEventData{				private var eventData : Array;		private var blob : Blob;				public function CVEventData(eventData: Array){			this.eventData=eventData;		}				/**		* Get x  finds the blob of the specified type and with the specified index and returns its x-coordinate		* return: xCoor of type Number		**/		public function getX(eventType : String, index : int) : Number {			blob=getBlob(eventType,index);			return blob.getX();		}				/**		* Get y finds the blob of the specified type and with the specified index and returns its y-coordinate		* return: yCoor of type Number		**/		public function getY(eventType : String, index : int) : Number {			blob=getBlob(eventType,index);			return blob.getY();		}				/**		* Get width finds the blob of the specified type and with the specified index and returns its width		* return: width of type Number		**/		public function getWidth(eventType : String, index : int) : Number {			blob=getBlob(eventType,index);			return blob.getWidth();		}				/**		* Get height finds the blob of the specified type and with the specified index and returns its height		* return: height of type Number		**/		public function getHeight(eventType : String, index : int) : Number {			blob=getBlob(eventType,index);			return blob.getHeight();		}		/**		* getNumBlobs		* return the total number of blobs		**/		public function getNumBlobs() : int{			return getNum( CVEvent.ALL_BLOBS );		}				/**		* getNum		* return the number of blobs of the specified eventType 		**/		public function getNum( eventType : String ) : int{			if(eventType==CVEvent.ALL_BLOBS){				return eventData[0].length + eventData[1].length + eventData[2].length;			}						else if (eventType==CVEvent.SHELL || eventType==CVEvent.HOLE || eventType==CVEvent.FACE){				return eventData[CVEvent.getIntType(eventType)].length;			}			return -1;		}				/**		* getBlob		* @return the blob that holds all information pertinent to this index and type		**/		public function getBlob(eventType: String, index:int): Blob{			if(eventType==CVEvent.ALL_BLOBS && index<eventData[0].length + eventData[1].length+ eventData[2].length){				if(index >= eventData[0].length){					if(index>=eventData[0].length + eventData[1].length){						return eventData[2][index - eventData[0].length - eventData[1].length];					}					else{						return eventData[1][index - eventData[0].length];					}				}				else{					return eventData[0][index];				}			}						else if(eventType==CVEvent.SHELL || eventType==CVEvent.HOLE || eventType==CVEvent.FACE){				return eventData[CVEvent.getIntType(eventType)][index];			}						return null;		}	}}