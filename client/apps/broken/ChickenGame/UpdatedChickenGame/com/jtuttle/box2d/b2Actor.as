package com.jtuttle.box2d {	import Box2D.Dynamics.b2Body;	import Box2D.Dynamics.b2World;		import flash.display.DisplayObject;	import flash.events.EventDispatcher;		public class b2Actor extends EventDispatcher {		protected var _body:b2Body;		protected var _costume:DisplayObject;				protected var _removalFlag:Boolean;				public function b2Actor(body:b2Body, costume:DisplayObject) {			_body = body;			_costume=costume;			_body.SetUserData(this);		}				public function get body():b2Body {			return _body;		}				public function destroy():void{			_body.SetUserData(null);			_body=null;		}				public function set removalFlag(value:Boolean):void{			_removalFlag=value;		}				public function get removalFlag():Boolean{			return _removalFlag;		}				public function updateCostume():void{			_costume.x=_body.GetPosition().x*b2Values.PX_RATIO;			_costume.y=_body.GetPosition().y*b2Values.PX_RATIO;			_costume.rotation=_body.GetAngle()*(180/Math.PI);		}				public function get costume():DisplayObject{			return _costume;					}			}}