package  {	import flash.utils.Timer;	import flash.events.*;	import flash.display.MovieClip;	public class GameTimer extends MovieClip {		//the timer object that actually ticks		var theTimer:Timer;				//the value of the timer.		var timerValue:int = 0;				public function GameTimer() {			// constructor code								setupTimer();			timerText.text = ""+timerValue;		}				private function setupTimer():void{			theTimer = new Timer(1000);			theTimer.addEventListener(TimerEvent.TIMER, timerTick);			theTimer.start();								}				private function timerTick(t:TimerEvent):void{						timerValue++;			timerText.text = ""+timerValue;		}				public function resetTimer():void{			theTimer.stop();			timerValue=0;			timerText.text = ""+timerValue;			setupTimer();		}	}	}